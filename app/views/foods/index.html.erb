<p style="color: green"><%= notice %></p>

<%= link_to "New food", new_food_path %>
<h1>Foods</h1>

<table id="foods">
  <thead>
    <tr>
    <th class="arrow-flex"> Food <%= link_to raw("&#9660;"), sort_by: "name", direction: (@sort_by == "name" && @direction == "asc" ? "desc" : "asc"), class: "arrow-icon" %></th>
      <th>Measurement Unit</th>
      <th>Unit Price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.measurement_unit %></td>
        <td>$<%= food.price %></td>
        <td>
        <%= button_to "Delete", food_path(food), method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


