<p style="color: green"><%= notice %></p>

<h2 style="text-align:center">Recipe <%= params[:index].to_i %></h2>

<div class="element">
      <div class="element_left_1">
        <p>Preparation time: <%= @recipe.preparation_time %></p>

        <p>Cooking time: <%= @recipe.cooking_time %></p>
        <p>steps: <%= @recipe.description %></p>
        
      </div>

      <div class="element_mid">&nbsp;</div>

      <div class="element_right_1">Public
        <% if @recipe.public %>
          <i class="fa-solid fa-toggle-on fa-2xl" style="color: #159341;"></i>
        <% else %>
          <i class="fa-solid fa-toggle-off fa-2xl" style="color: #cc1f1a;"></i>
        <% end %>
      </div>

    </div>

    <div class="flex-2">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
        Generate Shopping List
    </button>
          <%# link_to "Generate Shopping List", generate_shopping_list_path(@recipe) %>
          <%= link_to "Add Ingredients", "#", class: "disable"  %>
    </div>

    <hr />

    <div>
  <%= link_to "Edit this recipe", edit_recipe_path(@recipe, index: params[:index]) %> |
  <%= link_to "Back to recipes", recipes_path %>

  <%= button_to "Destroy this recipe", @recipe, method: :delete %>
</div>

    <!-- show.html.erb -->

<h1><%= @recipe.name %></h1>

<%= link_to "Public Recipe", public_recipes_path %>


<table>
  <thead>
    <tr>
      <th>Food Name</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Value</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% # Initialize variables to store the column totals and total items added %>
    <% total_quantity = 0 %>
    <% total_price = 0 %>
    <% total_value = 0 %>
    <% total_items_added = 0 %>

    <% @recipe_foods.each do |recipe_food| %>
      <tr>
        <td><%= recipe_food.name %></td>
        <td><%= recipe_food.quantity %></td>
        <td><%= recipe_food.price %></td>
        <td><%= recipe_food.value %></td>
        <td><%= button_to "Delete", recipe_food, method: :delete, data: { confirm: "Are you sure you want to delete this recipe food?" } %></td>
      </tr>
    <% end %>
  </tbody>

</table>



<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle" text-center>Generate Shopping List</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="inventoryModalBody">
        <p> Choose an inventory to use</p>
        <select id="inventorySelect">
          <option value="0">Select inventory</option>
          <% @inventories.each do |inventory| %>
            <option value="<%= inventory.id %>"><%= inventory.name %></option>
          <% end %>
        </select>
        <button type="button" class="btn btn-primary" id="generateShoppingListBtn">Generate</button>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<script>
  var recipeId = <%= @recipe.id %>;
</script>
