
<h1 style="text-align:center">Public Recipes</h1>

<% @recipes_true.each do |recipe| %>

    <div class="element">
      <div class="element_left">
        <p><strong><%= recipe.name %></strong></p>
        <p>By: <%= recipe.user.name %></strong></p>
        <%= link_to "View Recipe", recipe_path(recipe, index: recipe.id), class: "btn" %>
      </div>

      <div class="element_mid"></div>

      <div class="element_right">
      <% recipe_totals = @recipe_totals[recipe.id] %>
      <p>Total food items: <%= recipe_totals[:total_items_added] %></p>
      <p>Total price: $ <%= recipe_totals[:total_value] %></p>
      </div>

    </div>

<%end%>

